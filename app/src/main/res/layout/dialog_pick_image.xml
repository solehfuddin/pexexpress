<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/margin_activity"
    >

    <ImageView
        android:id="@+id/picker_galery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_activity"
        android:src="@drawable/ic_baseline_photo_size_select_actual_24"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Ambil dari Galeri"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/picker_galery"
        app:layout_constraintStart_toStartOf="@+id/picker_galery"
        app:layout_constraintTop_toBottomOf="@+id/picker_galery"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_marginEnd="80dp"
        android:id="@+id/picker_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_activity"
        android:src="@drawable/ic_baseline_camera_alt_24"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Ambil dari Kamera"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/picker_camera"
        app:layout_constraintStart_toStartOf="@+id/picker_camera"
        app:layout_constraintTop_toBottomOf="@+id/picker_camera"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>